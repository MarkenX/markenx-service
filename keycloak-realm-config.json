{
  "realm": "markenx",
  "enabled": true,
  "displayName": "MarkenX Game Management",
  "displayNameHtml": "<div class=\"kc-logo-text\"><span>MarkenX</span></div>",
  "registrationAllowed": false,
  "registrationEmailAsUsername": true,
  "rememberMe": true,
  "verifyEmail": false,
  "loginWithEmailAllowed": true,
  "duplicateEmailsAllowed": false,
  "resetPasswordAllowed": true,
  "editUsernameAllowed": false,
  "bruteForceProtected": true,
  "permanentLockout": false,
  "maxFailureWaitSeconds": 900,
  "minimumQuickLoginWaitSeconds": 60,
  "waitIncrementSeconds": 60,
  "quickLoginCheckMilliSeconds": 1000,
  "maxDeltaTimeSeconds": 43200,
  "failureFactor": 5,
  "defaultRole": {
    "name": "default-roles-markenx",
    "description": "${role_default-roles}",
    "composite": true,
    "clientRole": false
  },
  "roles": {
    "realm": [
      {
        "name": "ADMIN",
        "description": "Administrator role with full access to manage students, scenarios, and view statistics",
        "composite": false,
        "clientRole": false
      },
      {
        "name": "STUDENT",
        "description": "Student role with access to game scenarios and personal statistics",
        "composite": false,
        "clientRole": false
      }
    ]
  },
  "users": [
    {
      "username": "admin@markenx.com",
      "email": "admin@markenx.com",
      "emailVerified": true,
      "enabled": true,
      "firstName": "Admin",
      "lastName": "User",
      "credentials": [
        {
          "type": "password",
          "value": "admin123",
          "temporary": false
        }
      ],
      "realmRoles": ["ADMIN"],
      "requiredActions": []
    }
  ],
  "clients": [
    {
      "clientId": "markenx-service",
      "name": "MarkenX Backend Service",
      "description": "Backend service for MarkenX game management",
      "enabled": true,
      "clientAuthenticatorType": "client-secret",
      "secret": "**********",
      "redirectUris": ["http://localhost:8080/*"],
      "webOrigins": ["http://localhost:8080"],
      "publicClient": false,
      "protocol": "openid-connect",
      "bearerOnly": true,
      "serviceAccountsEnabled": false,
      "directAccessGrantsEnabled": true,
      "standardFlowEnabled": false,
      "implicitFlowEnabled": false,
      "authorizationServicesEnabled": false
    },
    {
      "clientId": "markenx-unity-client",
      "name": "MarkenX Unity Game Client",
      "description": "Unity game client for student gameplay",
      "enabled": true,
      "clientAuthenticatorType": "client-secret",
      "redirectUris": [
        "http://localhost:*",
        "https://*.markenx.com/*"
      ],
      "webOrigins": [
        "http://localhost:*",
        "https://*.markenx.com"
      ],
      "publicClient": true,
      "protocol": "openid-connect",
      "bearerOnly": false,
      "directAccessGrantsEnabled": true,
      "standardFlowEnabled": true,
      "implicitFlowEnabled": false,
      "fullScopeAllowed": true
    },
    {
      "clientId": "markenx-admin-web",
      "name": "MarkenX Admin Web Application",
      "description": "Web application for administrators",
      "enabled": true,
      "clientAuthenticatorType": "client-secret",
      "redirectUris": [
        "http://localhost:3000/*",
        "https://admin.markenx.com/*"
      ],
      "webOrigins": [
        "http://localhost:3000",
        "https://admin.markenx.com"
      ],
      "publicClient": true,
      "protocol": "openid-connect",
      "bearerOnly": false,
      "directAccessGrantsEnabled": true,
      "standardFlowEnabled": true,
      "implicitFlowEnabled": false,
      "fullScopeAllowed": true
    }
  ],
  "browserFlow": "browser",
  "registrationFlow": "registration",
  "directGrantFlow": "direct grant",
  "resetCredentialsFlow": "reset credentials",
  "clientAuthenticationFlow": "clients",
  "dockerAuthenticationFlow": "docker auth",
  "attributes": {
    "userProfileEnabled": "false",
    "impersonation": "false"
  },
  "requiredActions": [
    {
      "alias": "UPDATE_PASSWORD",
      "name": "Update Password",
      "providerId": "UPDATE_PASSWORD",
      "enabled": true,
      "defaultAction": false,
      "priority": 30,
      "config": {}
    },
    {
      "alias": "update_user_locale",
      "name": "Update User Locale",
      "providerId": "update_user_locale",
      "enabled": true,
      "defaultAction": false,
      "priority": 1000,
      "config": {}
    }
  ],
  "accessTokenLifespan": 300,
  "accessTokenLifespanForImplicitFlow": 900,
  "ssoSessionIdleTimeout": 1800,
  "ssoSessionMaxLifespan": 36000,
  "offlineSessionIdleTimeout": 2592000,
  "offlineSessionMaxLifespanEnabled": false,
  "offlineSessionMaxLifespan": 5184000,
  "clientSessionIdleTimeout": 0,
  "clientSessionMaxLifespan": 0,
  "accessCodeLifespan": 60,
  "accessCodeLifespanUserAction": 300,
  "accessCodeLifespanLogin": 1800,
  "actionTokenGeneratedByAdminLifespan": 43200,
  "actionTokenGeneratedByUserLifespan": 300,
  "oauth2DeviceCodeLifespan": 600,
  "oauth2DevicePollingInterval": 5,
  "internationalizationEnabled": true,
  "supportedLocales": ["en", "es"],
  "defaultLocale": "es",
  "smtpServer": {},
  "eventsEnabled": true,
  "eventsListeners": ["jboss-logging"],
  "enabledEventTypes": [
    "LOGIN",
    "LOGIN_ERROR",
    "LOGOUT",
    "UPDATE_PASSWORD",
    "UPDATE_PASSWORD_ERROR",
    "REGISTER",
    "REGISTER_ERROR"
  ],
  "adminEventsEnabled": true,
  "adminEventsDetailsEnabled": true
}
